<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Button.Main.White" parent="AppTheme.Button.Main">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AppTheme.Button.Main.White.NoBackground" parent="AppTheme.Button.Main">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Button.Main.Gray" parent="AppTheme.Button.Main">
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:backgroundTint">@color/mainStrokeColor</item>
    </style>

    <style name="AppTheme.Button.Main" parent="AppTheme.Button">
        <item name="android:background">@drawable/all_mainbuttonbackgroundselector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">@dimen/height_all_mainButton</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.BottomPicker.Button.Done" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/bottomPickerHeaderDoneButtonColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
   </style>

    <style name="AppTheme.Button.Borderless.NoPadding" parent="AppTheme.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppTheme.Button.Skip" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Dialog.ThirdPartyApp" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@android:</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>