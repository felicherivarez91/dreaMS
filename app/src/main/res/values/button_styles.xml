<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Button.White" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AppTheme.Button.Main" parent="AppTheme.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/all_mainbuttonbackgroundselector</item>
    </style>


    <style name="AppTheme.Dropdown.Button.Done" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/dropdownHeaderDoneButtonColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>