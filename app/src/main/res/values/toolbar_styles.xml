<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Toolbar.Main" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:elevation">@dimen/elevation_all_toolbar</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>

        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Toolbar.White" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:elevation">@dimen/elevation_all_toolbar</item>
        <item name="android:colorPrimary">@color/mainBlackColor</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>