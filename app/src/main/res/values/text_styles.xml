<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.WelcomeText">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AllScreenTitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.AllEditTextLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.AllExplanationText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainExplanationTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="AppTheme.VerifyPhoneDigitNumberText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AllErrorText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainErrorColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="AppTheme.PersonalInformationNicknameEditText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:backgroundTint">@color/editTextUnderlineColor</item>

        <!-- underline color-->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent_50</item>
        <item name="colorControlHighlight">@color/colorAccent_50</item>
    </style>

    <style name="AppTheme.InputTextError" parent="AppTheme.PersonalInformationNicknameEditText">
        <item name="android:backgroundTint">@color/mainErrorColor</item>
    </style>

    <style name="AppTheme.PersonalInformationSelectAvatarLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.PersonalInformationTermsAndConditionsText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.TermsAndConditionsText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.ItemScheduleDayText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/item_schedule_day_name_text_color_selector</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.PermissionText">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.PermissionText.Granted" parent="AppTheme.PermissionText">
        <item name="android:textColor">@color/itemPermissionGrantedTextColor</item>
    </style>

    <style name="AppTheme.PermissionText.NotGranted" parent="AppTheme.PermissionText">
        <item name="android:textColor">@color/itemPermissionNoGrantedTextColor</item>
    </style>

    <style name="AppTheme.Dialogs.ExplanationText" parent="AppTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.CountrySelector.Selected" parent="AppTheme.Dialogs.ExplanationText" />

    <style name="AppTheme.CountrySelector.UnSelected" parent="AppTheme.Dialogs.ExplanationText">
        <item name="android:textColor">@color/itemCountrySelectorUnselectedTextColor</item>
    </style>

    <style name="AppTheme.Timer.Minutes" parent="AppTheme">
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Timer.Seconds" parent="AppTheme">
        <item name="android:textSize">76sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.Week.TextView" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.Week.TextView.Disabled" parent="AppTheme.Dashboard.Week.TextView">
        <item name="android:textColor">@color/itemDashboardWeekDayUnavailableTextColor</item>
    </style>

    <style name="AppTheme.Dashboard.Week.Date.TextView" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainExplanationTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.Dashboard.Header.DemoMode.TextView" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Dashboard.Header.Title.TextView" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.Dashboard.Header.Explanation.TextView" parent="AppTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.Dashboard.ProgressBar.Challenges.TextView" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.Info.Title.TextView" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.NonCompletedChallenges.Title.TextView" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.NonCompletedChallenges.Explanation.TextView" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainExplanationTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <!-- Challenge Category -->
    <style name="AppTheme.Dashboard.Challenges.Categories.Title.TextView" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.Dashboard.Challenges.Categories.Explanation.TextView" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/itemDashboardChallengeCategoryExplanationTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.Dashboard.Challenges.Categories.Start.Button" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <!-- ./Challenge Category -->

    <style name="AppTheme.Dashboard.Challenges.Path.Title.TextView" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:letterSpacing">-0.024</item>
    </style>

    <style name="AppTheme.TabLayout.TabBar.Text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainBlackColor_50</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

</resources>