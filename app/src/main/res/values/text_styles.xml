<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.WelcomeText">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AllScreenTitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.AllEditTextLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.AllExplanationText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainExplanationTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="AppTheme.VerifyPhoneDigitNumberText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AllErrorText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainErrorColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="AppTheme.PersonalInformationNicknameEditText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:backgroundTint">@color/editTextUnderlineColor</item>
    </style>

    <style name="AppTheme.PersonalInformationSelectAvatarLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.PersonalInformationTermsAndConditionsText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.TermsAndConditionsText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="AppTheme.ItemScheduleDayText">
        <item name="android:textColor">@color/itemScheduleDayNameTextColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="AppTheme.ItemScheduleDaySelectedText" parent="AppTheme.ItemScheduleDayText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ItemScheduleDayUnselectedText" parent="AppTheme.ItemScheduleDayText">
        <item name="android:textColor">@color/itemScheduleDayNameTextColor</item>
    </style>





</resources>