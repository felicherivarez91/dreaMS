<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.WelcomeText">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.LoginTitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.LoginPhoneNumberLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>


    <style name="AppTheme.LoginPhoneNumberMessageText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/loginPhoneNumberMessageTextColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


    <style name="AppTheme.VerifyPhoneDigitNumberText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainBlackColor</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.VerifyPhoneSmsCodeErrorText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mainErrorColor</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>


</resources>